<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/simpleExoPlayerView"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="@dimen/xxmargin">

    </com.google.android.exoplayer2.ui.SimpleExoPlayerView>
    <TextView
        android:id="@+id/stepDetailedDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/simpleExoPlayerView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="@dimen/xxmargin"
        tools:text="Step detailed description"
        android:layout_marginLeft="@dimen/xxmargin"
        android:textSize="20sp"
        />
    <Button
        android:id="@+id/prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/stepDetailedDescription"
        app:layout_constraintLeft_toLeftOf="@id/stepDetailedDescription"
        android:text="@string/prevButton"/>
    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/prev"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/xxmargin"
        android:text="@string/nextButton"/>

</android.support.constraint.ConstraintLayout>